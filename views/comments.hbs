<main>
    {{!-- {{#if dataComment  }} --}}
    <div class="container">

        <div>
            <h1>Comments for {{form.title}}</h1>
        </div>

        <div class="col-md-12 col-lg-12 col-sm-12 {{showaddComment}}">

            <div class="card w-100">
                <div class="card-body">
                    <p class="card-title">Please Add Comment</p>
                    <form method="POST" action="/addComment/{{form._id}}">
                        <div class="form-group">
                            <textarea class="form-control" id="popup-event-des" name="comments" rows="3"></textarea>
                        </div>
                        <div class="col-sm-10">
                            <button type="submit" class=" editForm btn btn-primary">Add Comment</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="row container">

            {{#each dataComment}}
            <div class="col-md-12 col-lg-12 col-sm-12">
                <div class="card w-100">
                    <div class="card-header">
                        Comments...
                    </div>
                    <div class="card-body ">
                        <blockquote class="blockquote ">
                            <p class="entire-black">{{comment}}</p>
                            <footer class="blockquote-footer">{{name}}</footer>
                        </blockquote>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>

    </div>
    {{!-- {{else}} --}}

    {{#if user}}
    <div>
        <div class="notfound-div">
		<div class="notfound">
			<div class="notfound-404"></div>
			<h1>Empty!!</h1>
			<h2>No Comments for now</h2>
			<p>User has not added any comments.</p>
			<a href="#">Add an event</a>
		</div>
	</div>
    </div>
    {{/if}}
    {{!-- {{/if}} --}}
    {{!-- </div> --}}

</main>